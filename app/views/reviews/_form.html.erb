<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: 1..5, prompt: "Nb of stars", selected: 3 %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
